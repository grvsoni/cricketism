<h2>Sign in</h2>
<hr/>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <div class="form-group">
    <%= f.label :username, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :usernames, :autofocus => true, :class => "form-control", :placeholder => "Username" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.label :remember_me, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.check_box :remember_me %>
      </div>
    </div>
  <% end -%>
  <hr/>
  <div class="form-group">
    <label class = "col-sm-2 control-label"></label>
    <div class="col-sm-10">
      <%= f.submit "Sign in", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
<hr/>
<%= render "devise/shared/links" %>