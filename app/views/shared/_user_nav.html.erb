<% if current_user.present? %>
  <ul class="nav pull-right">
    <li>
      <a href="javascript:void(0);">
        Welcome 
        <%= current_user.profile ? current_user.profile.fullname : current_user.username %>
      </a>
    </li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to "My Account", edit_user_path(current_user) %>
          <% if current_user.profile.present? %>
            <%= link_to "Profile", edit_profile_path(current_user.profile.id) %>
          <% else %>
            <%= link_to "Profile", new_profile_path %>
          <% end %>
        </li>
        <li class="divider"></li>
        <li><%= link_to "Signout", destroy_user_session_path, :method => :delete  %></li>
      </ul>
    </li>
  </ul>
<% end %>