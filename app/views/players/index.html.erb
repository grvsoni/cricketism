<%- model_class = Player -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th>Team</th>
      <th>Club</th>
      <th><%= model_class.human_attribute_name(:batting_hand) %></th>
      <th><%= model_class.human_attribute_name(:bowling_hand) %></th>
      <th><%= model_class.human_attribute_name(:skill) %></th>
      <th><%= model_class.human_attribute_name(:batting_style) %></th>
      <th><%= model_class.human_attribute_name(:bowling_style) %></th>
      <th><%= model_class.human_attribute_name(:is_wicketkeeper) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.id, player_path(player) %></td>
        <td><%= player.user.name %></td>
        <td><%= player.team.try(:name) %></td>
        <td><%= player.club.try(:name) %></td>
        <td><%= player.batting_hand %></td>
        <td><%= player.bowling_hand %></td>
        <td><%= player.skill %></td>
        <td><%= player.batting_style %></td>
        <td><%= player.bowling_style %></td>
        <td><%= player.is_wicketkeeper %></td>
        <td><%=l player.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_player_path(player), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      player_path(player),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_player_path,
            :class => 'btn btn-primary' %>
