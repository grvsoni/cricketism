<%= nested_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :username, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :username, :autofocus => true, :class => "form-control", :placeholder => "Username" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm Password" %>
    </div>
  </div>
  <%= f.hidden_field :role, :value => Role.find_by_name("Player").id, :name => "user[role_ids][]" %>

  <%= f.fields_for :player do |player| %>
    <div class="control-group">
      <%= player.label :batting_hand, :class => 'control-label' %>
      <div class="controls">
        <%= player.text_field :batting_hand, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= player.label :bowling_hand, :class => 'control-label' %>
      <div class="controls">
        <%= player.text_field :bowling_hand, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= player.label :skill, :class => 'control-label' %>
      <div class="controls">
        <%= player.text_field :skill, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= player.label :batting_style, :class => 'control-label' %>
      <div class="controls">
        <%= player.text_field :batting_style, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= player.label :bowling_style, :class => 'control-label' %>
      <div class="controls">
        <%= player.text_field :bowling_style, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= player.label :is_wicketkeeper, :class => 'control-label' %>
      <div class="controls">
        <%= player.text_field :is_wicketkeeper, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= player.label :club_id, :class => 'control-label' %>
      <div class="controls">
        <%= player.text_field :club_id, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= player.label :team_id, :class => 'control-label' %>
      <div class="controls">
        <%= player.text_field :team_id, :class => 'text_field' %>
      </div>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                players_path, :class => 'btn' %>
  </div>
<% end %>
