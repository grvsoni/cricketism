<%= form_for @role, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render "shared/error_messages", :target => @role %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :login_role, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :login_role, :value => @role.login_role, :class => 'text_field' %>
    </div>
  </div>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                roles_path, :class => 'btn' %>
  </div>
<% end %>
