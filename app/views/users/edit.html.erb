<h2>Edit <%= @user.name %></h2>

<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render "shared/error_messages", :target => @user %> 

  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'text_field', :autofocus => true %>
    </div>
  </div> 

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'text_field', :autofocus => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'text_field', :autofocus => true %>
    </div>
  </div>

  <%= render "users/roles", :f => f %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        ((current_user.is_admin? && current_user.is_club_admin?) ? users_path : "/"), :class => 'btn' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(@user), :confirm => "Are you sure?", :method => :delete %>.</p>

