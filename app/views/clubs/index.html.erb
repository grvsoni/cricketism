<%- model_class = Club -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <%= link_to "Add New Club",
            new_club_path,
            :class => 'btn btn-primary pull-right' %>
  </h1>
</div>
<% @clubs.each do |club| %>
  <div class="well pull-left" style="width:160px; margin-right:15px;">
    <%= link_to((image_tag club.logo.url(:medium), :class => "img-thumbnail"), club_path(club)) %>
    <div class="media-body">
      <h4 class="media-heading"><center><%= club.name %></center></h4>
      <p><i><%= club.war_cry %><i></p>
    </div>
  </div>
<% end %> 
