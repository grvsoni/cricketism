<%- model_class = Club -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table-striped datatable">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:level) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:is_verified) %></th>
      <th><%= model_class.human_attribute_name(:is_registered) %></th>
      <th><%= model_class.human_attribute_name(:verification_date) %></th>
      <th><%= model_class.human_attribute_name(:registration_date) %></th>
      <th class ="no-sort"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= link_to club.name, club_path(club), :title => club.war_cry %></td>
        <td><%= club.level.level %></td>
        <td><%= club.status %></td>
        <td><%= club.city %></td>
        <td><%= club.state %></td>
        <td><%= club.country %></td>
        <td><%= club.is_verified ? content_tag(:i, nil, :class => "icon icon-ok") : content_tag(:i, nil, :class => "icon icon-minus-sign") %></td>
        <td><%= club.is_registered ? content_tag(:i, nil, :class => "icon icon-ok") : content_tag(:i, nil, :class => "icon icon-minus-sign") %></td>
        <td><%= club.verification_date %></td>
        <td><%= club.registration_date %></td>
        <td>
          <%= link_to "", edit_club_path(club), :class=>"icon icon-edit", :title => t('.edit', :default => t("helpers.links.edit")) %>
          <%= link_to "", club_path(club),
                      :title => t('.destroy', :default => t("helpers.links.destroy")),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'icon icon-remove red' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div style="clear:both;"></div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_club_path,
            :class => 'btn btn-primary' %>
